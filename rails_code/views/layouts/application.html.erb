<!DOCTYPE html>
<html>
<head>
  <title>ITSS | Intelligent Tutoring for the Structure Strategy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="https://use.typekit.net/vco3ybr.js"></script>
  <script>try{Typekit.load({ async: true  });}catch(e){}</script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="/favicon.png">
</head>

<% if (ENV['RAILS_ENV'] == "development" || current_user.teacher? || current_user.admin?) %>
  <body class="<%= (current_user.teacher? || current_user.admin?) ? 'dashboard' : '' %>">
<% else %>
  <body class="<%= (current_user.teacher? || current_user.admin?) ? 'dashboard' : '' %>" oncopy="return false" oncut="return false" onpaste="return false">
<% end %>

  <nav class="navbar navbar-inverse main-nav">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle user-dropdown-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= current_user.full_name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <%#<li><a href="#">My Profile</a></li>%>
                <%#<li><a href="#">Settings</a></li>%>
                <%#<li role="separator" class="divider"></li>%>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% end %>
        </ul>
        <% if current_user.is_hybrid? && false %>
          <ul class="nav navbar-nav navbar-right language-selector">
            <li><a href="#" class="en">English</a></li>
            <li><a href="#" class="es">Spanish</a></li>
          </ul>
        <% end %>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <%= yield %>
</body>
</html>
